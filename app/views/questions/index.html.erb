<% content_for(:page_header) {"Participate in our survey right now!"} %>

<% @questions.each do |question| %>
  <div class="well">
    <h2><%= question.topic %></h2>

    <p>
      <% if current_user %>
        <%= link_to 'Participate!', question_path(question), class: 'btn btn-primary btn-lg block' %>
      <% else %>
        Please sign in via <%= link_to 'Facebook', '/auth/facebook' %> to participate in this question.
      <% end %>
    </p>

    <div class="btn-group">
      <%= link_to 'Edit', edit_question_path(question), class: 'btn btn-default' %>
      <%= link_to 'Delete', question_path(question),
                  method: :delete,
                  class: 'btn btn-danger', data: {confirm: 'Are you sure?'} %>
    </div>
  </div>
<% end %>
