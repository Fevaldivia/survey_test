<% content_for(:page_header) {"Participate in our survey !"} %>

<% @questions.each do |question| %>
  <div class="well">
    <h2><%= question.topic %> <small>(voted: <%= question.votes_summary %>)</small></h2>
    <%= link_to 'Participate!', question_path(question), class: 'btn btn-primary btn-lg block' %>
  </div>
<% end %>
